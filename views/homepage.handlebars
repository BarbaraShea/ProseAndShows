
<section>
<div>
    <form>
        <h2>Make a Recommendation</h2>
        <h3><label for="category">I want to share a...</label><br></h3>
        <input type="radio" id="book" name="category" value="book">
        <label for="book">Book</label><br>
        <input type="radio" id="show" name="category" value="show">
        <label for="show">Show</label><br>
        <input type="radio" id="movie" name="category" value="movie">
        <label for="movie">Movie</label><br>
        <h3><label for="title">Post Title</label><br></h3>
        <input type="text" id="title" name="title"><br>
        <h3><label for="contents">Tell Us About It...</label><br></h3>
        <input type="text" id="contents" name="contents"><br>
        <h3><label for="genre">Genre</label><br></h3>
        <input type="text" id="genre" name="genre"><br>
        <h3><label for="tags">Additional Tags</label><br></h3>
        <input type="text" id="tags" name="tags"><br>
        <input type="submit" value="Submit">
    </form>
</div>
</section>
<section>
     <h2>Recommendation Slideshow</h2>
  <div class="carousel">
    <a class="carousel-item" href="#one!"><img src=""></a>
    <a class="carousel-item" href="#two!"><img src="https://lorempixel.com/250/250/nature/2"></a>
    <a class="carousel-item" href="#three!"><img src="https://lorempixel.com/250/250/nature/3"></a>
    <a class="carousel-item" href="#four!"><img src="https://lorempixel.com/250/250/nature/4"></a>
    <a class="carousel-item" href="#five!"><img src="https://lorempixel.com/250/250/nature/5"></a>
  </div>
</section>
<aside>
    <h2>Topics / Hot Threads</h2>
   {{#each homePosts as |post|}}
    <div>
      <h3>{{post.title_of_work}}</h3>
      <br />
      <h5>{{post.user_name}}</h5>
      <h5>{{post.date_created}}</h5>
      <br />
      <h6>Genre: {{post.genre_tag}}</h6>
      <h6>Tags: {{post.tag}}</h6>
        <input name='basic' value='tag1, tag2 autofocus'>
    </div>
   {{/each}}
</div>
</aside>

